<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:id="@+id/popup_map"
    android:background="@drawable/popup_map_background">

    <ImageView
        android:layout_width="382dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/popup_map_itemOnMap"
        android:src="@drawable/kerf_layout" />

    <Button
        android:id="@+id/popup_map_connectBluetooth"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_background_bottom_view"
        android:text="@string/popup_map_connectBluetooth"
        android:textSize="15dp" />

</RelativeLayout>