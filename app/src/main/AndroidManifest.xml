<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.pue.air.czajsearch" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_czajsearch_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_czajsearch_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CzajSearch" >
        <activity
            android:name=".ItemDetailsScreen"
            android:exported="false" />
        <activity
            android:name=".MainScreen"
            android:exported="false"
            android:parentActivityName=".FilterMenu_Activity" />
        <activity
            android:name=".FilterMenu_Activity"
            android:exported="false" />
        <activity
            android:name=".SpalshScreen_Activity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>